@model CloseFriendMyanamr.Models.UserManagement.AgentModel

@{
    ViewData["Title"] = "Create Agent";
}


<div class="row my-3 mx-auto">
    <div class="col-sm-12">
        <h3 class="mb-3 text-center responsive-heading">@ViewBag.CreateOrUpdate Employee</h3>
        <form asp-action="AgentCreate" method="post" id="employeeForm">
            <div class="row">
                <!-- Left Column: Employee Details -->
                <div class="col-md-12 col-sm-12">
                    <div class="card mx-auto w-80 shadow">
                        <div class="card-header">
                            <span class="text-primary fw-bold"> Agent Information</span>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="AgentName" class="required"></label>
                                <input asp-for="AgentName" placeholder="Type here" class="form-control" />
                                <span asp-validation-for="AgentName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AgentPhone" class="required"></label>
                                <input asp-for="AgentPhone" placeholder="Type here" class="form-control" />
                                <span asp-validation-for="AgentPhone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" placeholder="Type here" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="FBPage"></label>
                                <input asp-for="FBPage" placeholder="Type here" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Remark"></label>
                                <input asp-for="Remark" placeholder="Type here" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
            <button type="submit" class="btn btn-primary mt-3 text-center">Submit</button>
                <a href="@Url.Action("AgentList", "UserManagement")" class="btn btn-secondary mt-3 text-center">Back To List</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}