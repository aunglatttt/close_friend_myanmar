@model IEnumerable<CloseFriendMyanamr.Models.UserManagement.OwnerModel>
@{
    ViewData["Title"] = "Owner List";
}
<link rel="stylesheet" href="~/css/employeelist.css" asp-append-version="true" />
<div class="row">
    <div class="col-sm-12">
        <!-- Header Row: Title and Add Button -->
        <div class="page-header shadow">
            <h2>Owner Management</h2>
            <a class="btn btn-add" asp-controller="UserManagement" asp-action="OwnerCreate">
                <i class="fas fa-user-plus"></i> Add New Owner
            </a>
        </div>

        <!-- Main Content Row -->
        <div class="row">
            <!-- Left Card: DataTable -->
            <div class="col-md-12 mb-4">
                <div class="card border-2 shadow">
                    <div class="card-header">
                        Owner List
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="employeeTable" class="table table-hover table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone Number</th>
                                        <th>Address</th>
                                        <th>Remark</th>
                                        <th>No of Property</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.OwnerName</td>
                                            <td>@item.OwnerPhone</td>
                                            <td>@item.Address</td>
                                            <td>@item.Remark</td>
                                            <td>@item.Type</td>
                                            <td>
                                                <i class="fa-solid fa-pen" onclick="window.location.href='@Url.Action("OwnerCreate", "UserManagement", new { id = item.Id })'" style="cursor:pointer; color:#0279d4;" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"></i>
                                                <i class="fa-solid fa-trash-can" onclick="deleteIncomeTitle(@item.Id)" style="cursor:pointer; color:red; margin-left:10px;" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"></i>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#employeeTable').DataTable({
            responsive: true, // Enable responsive feature
            paging: true,     // Enable pagination
            searching: true,  // Enable search
            ordering: true,   // Enable sorting
            info: true,       // Show table information
            autoWidth: false, // Disable automatic column width calculation
            columnDefs: [
                { responsivePriority: 1, targets: 0 }, // Make Employee Name column high priority
                { responsivePriority: 2, targets: -1 } // Make Action column high priority
            ]
        });
    });

      function deleteIncomeTitle(id) {
        if (confirm('Are you sure you want to delete this owner?')) {
            fetch(`/UserManagement/DeleteOwner/${id}`, { method: 'POST' })
                .then(() => window.location.reload());
        }
    }
</script>
