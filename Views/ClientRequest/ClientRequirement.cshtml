@model CloseFriendMyanamr.Models.ClientManagement.ClientRequirementModel

@{
    ViewData["Title"] = "Client Requirement";
}
<link rel="stylesheet" href="~/css/employeeCreate.css" asp-append-version="true" />

<div class="row my-3 mx-auto">
    <div class="col-sm-12">
        <h3 class="mb-3 text-center responsive-heading">@ViewBag.ClientInfo</h3>
        <form asp-action="ClientRequirementCreate" method="post" id="employeeForm">
            <div class="row">
                <!-- Left Column: Employee Details -->
                <div class="col-md-12 col-sm-12">
                    <div class="card mx-auto w-90">
                        <div class="card-header">
                            Client Information
                        </div>
                        <div class="card-body">
                            <div class="row mt-3">
                                <input value="@ViewBag.ClientId" hidden asp-for="ClientId" />
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Purpose" class="required"></label>
                                        <select class="form-select mb-1" asp-for="Purpose" id="Purpose" name="Purpose" data-val="true" data-val-required="Purpose is required.">
                                            <option value="1">ဝယ်ရန်</option>
                                            <option value="2">ငှားရန်</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="Purpose"></span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="PropertyType"></label>
                                        <select class="form-select mb-1" asp-for="PropertyType" asp-items="ViewBag.PropertyType" id="PropertyType" name="PropertyType">
                                            <option value="" selected>{{Select}}</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="PropertyType"></span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="BuildingType"></label>
                                        <select class="form-select mb-1" asp-for="BuildingType" asp-items="ViewBag.BuildingType" id="BuildingType" name="BuildingType">
                                            <option value="" selected>{{Select}}</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="BuildingType"></span>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Street"></label>
                                        <input asp-for="Street" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Ward"></label>
                                        <input asp-for="Ward" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="CondoName"></label>
                                        <input asp-for="CondoName" placeholder="?" class="form-control" />
                                        <span asp-validation-for="CondoName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="StartPrice"></label>
                                        <input type="number" asp-for="StartPrice" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="EndPrice"></label>
                                        <input type="number" asp-for="EndPrice" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Area"></label>
                                        <input type="number" asp-for="Area" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="MasterBed"></label>
                                        <input type="number" asp-for="MasterBed" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="FloorMin"></label>
                                        <input type="number" asp-for="FloorMin" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="FloorMax"></label>
                                        <input type="number" asp-for="FloorMax" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="SpecialRequest"></label>
                                        <input asp-for="SpecialRequest" placeholder="?" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mx-auto w-90 mt-1">
                        <div class="card-header">
                            Townships
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (ViewData["Townships"] is List<string> townships)
                                {
                                    int id = 0;
                                    foreach (var township in townships)
                                    {
                                        id++;
                                        <div class="col-md-2 col-sm-12 col-12 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectedTownships_@id" name="selectedTownships" value="@township" />
                                                <label class="form-check-label" for="selectedTownships_@id">@township</label>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card mx-auto w-90 mt-1">
                        <div class="card-header">
                            Facilities
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (ViewData["Facilities"] is List<string> facilities)
                                {
                                    int id = 0;
                                    foreach (var facility in facilities)
                                    {
                                        id++;
                                        <div class="col-md-2 col-sm-12 col-12 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectedFacility_@id" name="selectedFacilities" value="@facility" />
                                                <label class="form-check-label" for="selectedFacility_@id">@facility</label>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3 text-center">Submit</button>
                <a href="@Url.Action("ClientList", "UserManagement")" class="btn btn-secondary mt-3 text-center">Back To List</a>
                <!-- Add Delete Button -->
                <button type="button" class="btn btn-danger mt-3" onclick="confirmDelete()">Delete</button>
            </div>
        </form>
    </div>
</div>

<!-- Confirmation Modal for Delete -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this client requirement?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deleteEmployee()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Function to show the delete confirmation modal
    function confirmDelete() {
        $('#deleteConfirmationModal').modal('show');
    }

    // Function to handle the delete action
    function deleteEmployee() {
        // Redirect to the delete action in your controller
        window.location.href = '@Url.Action("Delete", "Employee")' + '?id=' + @Model.Id;
    }
</script>