<script>
     document.getElementById("selectedFacility").addEventListener("change", function() {
        const inputAutoGenerate = document.getElementById("inputAutoGenerate");
        const inputRegular = document.getElementById("Code");

        if (this.checked) {
            inputAutoGenerate.style.display = "block";  // Show the "Auto Generate" field
            inputRegular.style.display = "none";        // Hide the regular input field
            inputRegular.value = "";
        } else {
            inputAutoGenerate.style.display = "none";   // Hide the "Auto Generate" field
            inputRegular.style.display = "block";       // Show the regular input field
        }
    });

    // Initial check when the page loads to set the correct state.
    if (document.getElementById("selectedFacility").checked) {
        document.getElementById("inputAutoGenerate").style.display = "block";
        document.getElementById("Code").style.display = "none";
    } else {
        document.getElementById("inputAutoGenerate").style.display = "none";
        document.getElementById("Code").style.display = "block";
    }

     $(document).ready(function () {
        $('#OwnerId').change(function () {
            var selectedValue = $(this).val();

            if (selectedValue > 0) {
                fetchOwnerData(selectedValue);
            }
        });
    });

    // Function to send the selected value of OwnerId to the backend via AJAX
    function fetchOwnerData(ownerId) {
        $.ajax({
            url: '@Url.Action("GetOwnerDetail", "Property")',
            type: 'POST',
            data: {
                OwnerId: ownerId
            },
            success: function (response) {
                // console.log('Success:', response);
                     document.getElementById('OwnerName').value = response.ownerName;
                document.getElementById('OwnerPhone').value = response.ownerPhone;
                document.getElementById('OwnerTypeSelect').value = response.type;
                document.getElementById('OwnerAddress').value = response.address;
            },
            error: function (xhr, status, error) {
                // Handle any error that occurs during the AJAX request
                console.error('Error:', error);
            }
        });
    }
</script>