@model CloseFriendMyanamr.ViewModel.AppointmentListViewModel

@{
    ViewData["Title"] = "Appointment Management";
}
<link rel="stylesheet" href="~/css/ap.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Appointment Management</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-6">
                            <input type="text" name="searchString" value="@Model.CurrentFilter"
                                   class="form-control" placeholder="Search by name, email or phone">
                        </div>
                        <div class="col-md-4">
                            <select name="statusFilter" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="New" selected="@(Model.StatusFilter == "New")">New</option>
                                <option value="Called" selected="@(Model.StatusFilter == "Called")">Called</option>
                                <option value="Contacted" selected="@(Model.StatusFilter == "Contacted")">Contacted</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Date & Time</th>
                                    <th>Message</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Appointments)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <div>@item.Email</div>
                                            <div>@item.Phone</div>
                                        </td>
                                        <td>
                                            <div>@item.Date.ToString("MMM dd, yyyy")</div>
                                            <div>@item.Time.ToString(@"hh\:mm")</div>
                                        </td>
                                        <td>@(item.Message.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                                        <td>
                                            <span class="badge
                                                @(item.Status == "New" ? "bg-secondary" :
                                                  item.Status == "Called" ? "bg-warning text-dark" : "bg-success")">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <form asp-action="UpdateStatus" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" name="status" value="New"
                                                            class="btn btn-sm @(item.Status == "New" ? "btn-secondary" : "btn-outline-secondary")">
                                                        New
                                                    </button>
                                                    <button type="submit" name="status" value="Called"
                                                            class="btn btn-sm @(item.Status == "Called" ? "btn-warning" : "btn-outline-warning")">
                                                        Called
                                                    </button>
                                                    <button type="submit" name="status" value="Contacted"
                                                            class="btn btn-sm @(item.Status == "Contacted" ? "btn-success" : "btn-outline-success")">
                                                        Contacted
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (!Model.Appointments.Any())
                {
                    <div class="card-footer text-center">
                        <div class="alert alert-info mb-0">
                            No appointments found matching your criteria.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>