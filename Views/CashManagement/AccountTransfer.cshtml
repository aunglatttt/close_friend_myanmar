@model CloseFriendMyanamr.Models.CashManagement.CashBookTransaction

@{
    ViewData["Title"] = "Account Transfer";
}


<div class="row my-3 mx-auto">
    <div class="col-sm-12">
        <h3 class="responsive-heading mb-3 text-center">Add Account Transfer Data</h3>
        <form asp-action="AccountTransfer" method="post" id="employeeForm">
            <div class="row">
                <!-- Left Column: Employee Details -->
                <div class="col-md-12 col-sm-12">
                    <div class="card mx-auto w-80 shadow">
                        <div class="card-header">
                            <span class="text-primary fw-bold">  Account Transfer </span>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="TransactionDate"></label>
                                <input type="date" asp-for="TransactionDate" placeholder="Type here" class="form-control" />
                                <span asp-validation-for="TransactionDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount"></label>
                                <input type="number" asp-for="Amount" placeholder="Type here" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="fromaccount" class="required">From Account</label>
                                <select class="form-select" id="fromaccount" name="fromaccount" data-val="true" data-val-required="From Account is required.">
                                    <option value="CompanyExpense">Main Cash</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="toaccount" class="required">To Account</label>
                                <select class="form-select" id="toaccount" name="toaccount" data-val="true" data-val-required="To Account is required.">
                                    <option value="CompanyExpense">Main Cash</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" placeholder="Type here" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TransactionType" class="required"></label>
                                <div class="d-flex">
                                    <div class="form-check me-3">
                                        <input type="radio" id="debit" name="TransactionType" value="Debit" class="form-check-input"
                                               asp-for="TransactionType" />
                                        <label class="form-check-label" for="debit">Debit</label>
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" id="credit" name="TransactionType" value="Credit" class="form-check-input"
                                               asp-for="TransactionType" />
                                        <label class="form-check-label" for="credit">Credit</label>
                                    </div>
                                </div>
                                <span asp-validation-for="TransactionType" class="text-danger"></span>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3 text-center">Submit</button>
                <a href="@Url.Action("CashBookList", "CashManagement")" class="btn btn-secondary mt-3 text-center">Back To Cash Book</a>

            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>