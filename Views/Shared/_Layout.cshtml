<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
    
    </style>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <img class="logo_img" src="@Url.Content("~/images/Logo.jpg")">
        </div>
        <div class="sidebar-menu">
            <div class="menu-item">
                <a href="#">
                    <i class="fa-solid fa-gauge menu-icon"></i>
                    <span class="menu-text">Dashboard</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="#">
                    <i class="fa-solid fa-magnifying-glass menu-icon"></i>
                    <span class="menu-text">Advance Search</span>
                </a>
            </div>
            <div class="menu-item mb-3">
                <a href="#">
                    <i class="fa-solid fa-phone menu-icon"></i>
                    <span class="menu-text">To Do List (Alert Center)</span>
                </a>
            </div>
            <div class="menu-group">
                <div class="menu-group-label">Operation Section</div>
                <div class="menu-item">
                    <a onclick="toggleMenu(this)">
                        <i class="fa-solid fa-house-chimney menu-icon"></i>
                        <span class="menu-text">Property</span>
                        <i class="fas fa-angle-right menu-arrow"></i>
                    </a>
                    <div class="submenu">
                        <a href="#">Add New Property</a>
                        <a href="#">Property Search</a>
                        <a href="#">Recent Update Data</a>
                    </div>
                </div>
                <div class="menu-item">
                    <a onclick="toggleMenu(this)">
                        <i class="fa-solid fa-magnifying-glass-dollar menu-icon"></i>
                        <span class="menu-text">Client Request</span>
                        <i class="fas fa-angle-right menu-arrow"></i>
                    </a>
                    <div class="submenu">
                        <a href="#">Client Request List</a>
                        <a href="#">Client Request Entry</a>
                    </div>
                </div>
            </div>
            <div class="menu-group">
                <div class="menu-group-label">Management Section</div>
                <div class="menu-item">
                    <a onclick="toggleMenu(this)">
                        <i class="fa-solid fa-user menu-icon"></i>
                        <span class="menu-text">User Management</span>
                        <i class="fas fa-angle-right menu-arrow"></i>
                    </a>
                    <div class="submenu">
                        <a asp-controller="UserManagement" asp-action="ClientList">
                            <span class="title">Client</span>
                        </a>
                        <a asp-controller="UserManagement" asp-action="OwnerList">
                            <span class="title">Owner</span>
                        </a>
                        <a asp-controller="UserManagement" asp-action="AgentList">
                            <span class="title">Agent</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="menu-group">
                <div class="menu-group-label">Account Section</div>
                <div class="menu-item">
                    <a onclick="toggleMenu(this)">
                        <i class="fa-solid fa-hand-holding-dollar menu-icon"></i>
                        <span class="menu-text">Cash Management</span>
                        <i class="fas fa-angle-right menu-arrow"></i>
                    </a>
                    <div class="submenu">
                        <a asp-controller="CashManagement" asp-action="CompanyIncome">
                            <span class="title">Company Income</span>
                        </a>
                        <a asp-controller="CashManagement" asp-action="IncomeList">
                            <span class="title">Income List</span>
                        </a>
                        <a asp-controller="CashManagement" asp-action="CompanyExpense">
                            <span class="title">Comapny Expense</span>
                        </a>
                        <a asp-controller="CashManagement" asp-action="ExpenseList">
                            <span class="title">Expense List</span>
                        </a>
                        <a asp-controller="CashManagement" asp-action="AccountTransfer">
                            <span class="title">Account Transfer</span>
                        </a>
                        <a asp-controller="CashManagement" asp-action="CashBookList">
                            <span class="title">Cash Book</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="menu-group">
                <div class="menu-group-label">Configuration Section</div>
                <div class="menu-item">
                    <a onclick="toggleMenu(this)">
                        <i class="fas fa-cog menu-icon"></i>
                        <span class="menu-text">Configuration</span>
                        <i class="fas fa-angle-right menu-arrow"></i>
                    </a>
                    <div class="submenu">
                        <a asp-controller="Employee" asp-action="EmployeeTypeList">
                            <span class="title">Employee Type</span>
                        </a>
                        <a asp-controller="Employee" asp-action="Index">
                            <span class="title">Employee</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="index">
                            <span class="title">Income Title</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="ExpenseList">
                            <span class="title">Expense Title</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="FacilityList">
                            <span class="title">Facilities</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="PropertyTypeList">
                            <span class="title">Property Type</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="BuildingTypeList">
                            <span class="title">Building Type</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="BankAccountInfoList">
                            <span class="title">Bank Accounts</span>
                        </a>
                        <a asp-controller="IncomeTitle" asp-action="LogList">
                            <span class="title">Logs</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Top Navbar -->
    <nav class="navbar shadow-sm" id="topNav">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-dark me-3" onclick="toggleSidebar()">
                <i class="fa fa-bars"></i>
            </button>
            <div class="search-container">
                <input type="text" class="form-control" placeholder="Search...">
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="position-relative me-3">
                <i class="fa fa-bell fa-lg"></i>
                <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">12</span>
            </div>
            <div class="dropdown">
                <a href="#" class="text-black text-decoration-none" id="userMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Admin User Name <i class="fa fa-user-circle fa-lg ms-2"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuLink">
                    <li><a class="dropdown-item" href="#">Change Password</a></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        @RenderBody()
    </main>

    <!-- Back to Top Button -->
    <button id="backToTop" class="back-to-top" title="Go to top">
        <i class="fa-solid fa-arrow-up"></i>
    </button>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
          const sidebar = document.getElementById("sidebar");
          sidebar.classList.toggle("collapsed");
          document.getElementById("mainContent").classList.toggle("collapsed");
          const topNav = document.getElementById("topNav");
          if (sidebar.classList.contains("collapsed")) {
            topNav.style.left = "100px";
            topNav.style.width = "calc(100% - 100px)";
          } else {
            topNav.style.left = "250px";
            topNav.style.width = "calc(100% - 250px)";
          }
        }

        function toggleMenu(element) {
          // Toggle the active class to show/hide submenu
          const parent = element.parentElement;
          parent.classList.toggle("active");
        }

        // Back to Top Button
        window.addEventListener('scroll', function() {
          const backToTop = document.getElementById('backToTop');
          if (window.scrollY > 300) {
            backToTop.classList.add('show');
          } else {
            backToTop.classList.remove('show');
          }
        });

        document.getElementById('backToTop').addEventListener('click', function() {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
