@model IEnumerable<CloseFriendMyanamr.ViewModel.CodeListViewModel>
<link rel="stylesheet" href="~/css/configuration.css" asp-append-version="true" />

<div class="row my-3">
    <div class="col-sm-12">
        <h3 class="responsive-heading title mb-3">Employee Types</h3>

        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card p-0">
                    <div id="expenseList">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Type Name</th>
                                    <th>Short Code</th>
                                    <th>Max Number</th>
                                    <th>Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.ErrorMessage == null){
                                    @foreach (var item in Model.Select((value, index) => new { value, index }))
                                    {
                                        <tr>
                                            <td>@(item.index + 1)</td>
                                            <td>@item.value.PropertyType</td>
                                            <td>@item.value.Prefix</td>
                                            <td>@item.value.MaxCode</td>
                                            <td>@(item.value.Prefix + item.value.MaxCode)</td>
                                        </tr>
                                    }
                                }else{
                                    <tr>
                                        <td colspan="5">
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.ErrorMessage
                                            </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
