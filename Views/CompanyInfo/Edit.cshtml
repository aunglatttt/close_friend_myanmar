@model CloseFriendMyanamr.Models.CompanyInformation.CompanyInfoModel

@{
    ViewData["Title"] = "Edit Company Information";
}

<div class="container py-4 px-0">
    <div class="row">
        <div class="col-lg-10 mx-auto offset-lg-2">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-building"></i> Edit Company Details</h4>
                </div>
                <div class="card-body p-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CPI" />
                        <input type="datetime-local" asp-for="CreatedAt"  hidden/>
                        <input type="hidden" asp-for="PhoneNo" />
                        <input type="hidden" asp-for="Address" />
                        <input type="hidden" asp-for="Status" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="form-label fw-bold"></label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShortName" class="form-label fw-bold"></label>
                                <input asp-for="ShortName" class="form-control" />
                                <span asp-validation-for="ShortName" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="mt-4 mb-3 text-primary">Display Options</h5>
                        <div class="row g-3 mb-4 px-3">
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsTownshipShow">
                                    <label class="form-check-label" asp-for="IsTownshipShow">Show Township</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAddressShow">
                                    <label class="form-check-label" asp-for="IsAddressShow">Show Address</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsInfoShow">
                                    <label class="form-check-label" asp-for="IsInfoShow">Show Info</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsRoomShow">
                                    <label class="form-check-label" asp-for="IsRoomShow">Show Room</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsSalePriceShow">
                                    <label class="form-check-label" asp-for="IsSalePriceShow">Show Sale Price</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsRentPriceShow">
                                    <label class="form-check-label" asp-for="IsRentPriceShow">Show Rent Price</label>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsRemarkShow">
                                    <label class="form-check-label" asp-for="IsRemarkShow">Show Remark</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top flex-column flex-sm-row">
                            <a asp-action="Index" class="btn btn-outline-secondary mb-2 mb-sm-0">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-info text-white">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}