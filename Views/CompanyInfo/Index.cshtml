@model CloseFriendMyanamr.Models.CompanyInformation.CompanyInfoModel

@{
    ViewData["Title"] = "Company Information";
}

<div class="container-fluid py-4 px-0">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Company Information Management</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Company Name</th>
                                    <th>Short Name</th>
                                    <th>Township Show</th>
                                    <th>Address Show</th>
                                    <th>Info Show</th>
                                    <th>Room Show</th>
                                    <th>Sale Price Show</th>
                                    <th>Rent Price Show</th>
                                    <th>Remark Show</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.CompanyName</td>
                                    <td>@Model.ShortName</td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsTownshipShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsTownshipShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsAddressShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsAddressShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsInfoShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsInfoShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsRoomShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsRoomShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsSalePriceShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsSalePriceShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsRentPriceShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsRentPriceShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge px-3 py-2 @(Model.IsRemarkShow ? "badge-success" : "badge-secondary")">
                                            @(Model.IsRemarkShow ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@Model.CPI" class="btn btn-sm btn-info text-white me-2">
                                                <i class="fas fa-edit"></i> 
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>